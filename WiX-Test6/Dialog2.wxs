<?xml version="1.0" encoding="UTF-8"?>

<!-- Dialog2.wxs
-->

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<Fragment>

    <UI>
      
<!-- Dieses Dialogfenster wird als Kindfenster von "MeinErstesDialogfenster"
     geöffnet. Damit es ordnungsgemäß geschlossen wird und das Elternfenster
     den Fokus zurück bekommt, muss das Publish-Element den Wert "Return"
     enthalten.
-->
      <Dialog Id="MeinZweitesDialogFenster"
              Width="300"
              Height="200"
              Title="WiX-Test6 Installation">

<!-- Die Anzeige mehrzeiliger Texte in einem Textfeld ist im WiX-Toolset offenbar
     nicht vorgesehen. Das offizielle Statement von Microsoft lautet:
     The recommended method for displaying text with specified line breaks
     is to use multiple one-line text controls located below each other.
     Also werden hier für einen dreizeiligen Text drei Textfelder angezeigt.
-->
        <Control Id="MeinText1"
                 Type="Text"
                 X="10"
                 Y="10"
                 Width="300"
                 Height="10"
                 Text="Dieses Dialogfenster funktioniert wie eine MessageBox." />

        <Control Id="MeinText2"
                 Type="Text"
                 X="10"
                 Y="20"
                 Width="300"
                 Height="10"
                 Text="Das aufrufende Fenster bleibt geöffnet. Beim Klick auf OK" />

        <Control Id="MeinText3"
                 Type="Text"
                 X="10"
                 Y="30"
                 Width="300"
                 Height="10"
                 Text="wird der Fokus an das aufrufende Fenster zurückgegeben." />

        <Control Id="OkButton"
                 Type="PushButton"
                 X="200"
                 Y="175"
                 Width="50"
                 Height="20"
                 Text="OK">
          
          <Publish Event="EndDialog"
                   Value="Return" />
          
        </Control>
        
      </Dialog>
      
    </UI>

  </Fragment>
  
</Wix>
