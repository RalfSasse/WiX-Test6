<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  
  <Fragment>
    
    <UI>
      
      <Dialog Id="FilesInUseDialog"
              Width="370"
              Height="270"
              Title="Amazing Software">

        <Control Id="InUseFiles"
                 Type="ListBox"
                 Width="300"
                 Height="150"
                 X="30"
                 Y="60"
                 Property="FileInUseProcess"
                 Sorted="yes" />

        <Control Id="Retry"
                 Type="PushButton"
                 X="304"
                 Y="243"
                 Width="56"
                 Height="17"
                 Default="yes"
                 Cancel="yes"
                 Text="Wiederholen">
          
          <Publish Event="EndDialog"
                   Value="Retry">1</Publish>
        </Control>
        
        <Control Id="Ignore"
                 Type="PushButton"
                 X="235"
                 Y="243"
                 Width="56"
                 Height="17"
                 Text="Ignorieren">
          
          <Publish Event="EndDialog"
                   Value="Ignore">1</Publish>
        </Control>
        
        <Control Id="Exit"
                 Type="PushButton"
                 X="166"
                 Y="243"
                 Width="56"
                 Height="17"
                 Text="Abbrechen">
          
          <Publish Event="EndDialog"
                   Value="Exit">1</Publish>
        </Control>
        
      </Dialog>
    </UI>
  </Fragment>
</Wix>

